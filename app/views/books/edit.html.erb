<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_for(@book) do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title, class: "book_title" %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion, class: "book_body" %>
	<div>
	    <%= f.submit 'Update Book' %>
	</div>


<%= link_to "Show", book_path(@book.id),class: "book_#{@book.id}" %>

 <span>|</span>


<%=link_to"Back", "/books",class: "back" %>


<% end %>