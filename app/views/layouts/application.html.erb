<!DOCTYPE html>
<html>
  <head>
    <title>Kadai2bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    

  <body>
  <header>
   <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Bookers</a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample1">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
              <li>
                <%= link_to" Home", user_path(current_user.id), class:"glyphicon glyphicon-home home" %>
              </li>

              <li>
                <%= link_to" Users", "/users", class:"glyphicon glyphicon-user users" %>
              </li>

              <li>
                <%= link_to" Books", "/books", class:"glyphicon glyphicon-book books" %>
              </li>

              <li>
                <%= link_to " Logout", destroy_user_session_path, method: :delete ,class: "glyphicon glyphicon-log-out logout" %>
              </li>

        <% else %>

              <li>
                <%= link_to " Home", "/", class:"glyphicon glyphicon-home home" %>
              </li>

              <li>
                <%= link_to " About", "/about", class:"glyphicon glyphicon-link about" %>
              </li>

              <li>
                <%= link_to" Sign Up", "/users/sign_up", class:"glyphicon glyphicon-edit sign_up" %>
              </li>

              <li>
                <%= link_to" Sign In", "/users/sign_in", class:"glyphicon glyphicon-log-in sign_in" %>
              </li>


          <% end %>

      </ul>
    </div>
  </div>
</nav>

  </header>

    <%= yield %>
  </body>
</html>
