<div class="container">
    <div class="row">

<%= render 'users/side', user: @user, books: @book %>

<div class="col-lg-8">

<h2>Users</h2>

       	<table class="table table-striped">

<tr>
	<th>Image</th>
	<th>Name</th>
	<th> </th>
  </tr>

	<% @users.each do |user| %>

	<tr>
		<td> <%= attachment_image_tag user, :image, :fill, 50, 50, fallback: 'noimage_mini.jpeg' %>
		</td>

		<td><%= user.name %></td>

		<td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
	</tr>

	<% end %>

</table>

