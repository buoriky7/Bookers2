

<div class="container">
    <div class="row">

<%= render 'users/side', user: @user, books: @book %>

<div class="col-lg-8">


 <table class="table table-striped">


                    <tr>
                    	<th> </th>
                    	<th>Title</th>
                    	<th>Opinion</th>
                    </tr>

 <% @books.each do |book| %>

                    <tr>
                       <td> <%= attachment_image_tag book.user, :image, :fill, 100, 100, fallback: 'noimage.jpeg' %></td>


                       <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>


                       <td><%= book.opinion %></td>
                    </tr>
 <% end %>




</table>

