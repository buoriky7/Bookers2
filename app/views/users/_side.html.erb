        <div class="col-lg-4">

            <% if flash[:notice] %>
                  <div class="flash">
                    <%= flash[:notice] %>
                  </div>
            <% end %>
                   <%= yield %>



            <h2>User info</h2>

            <div>
            <%= attachment_image_tag user, :image, :fill, 100, 100, fallback: 'noimage.jpeg' %>
            </div>
            <table class="table table-striped">

                <tr>
                    <th>Name</th>
                    <th><%= user.name %></th>
                </tr>

                <tr>
                    <th>Introduction</th>
                    <th><%= user.introduction %></th>
                </tr>

            </table>
             <% if user.id == current_user.id %>
                <p><%= link_to " ", edit_user_path(user), class: "glyphicon glyphicon-wrench edit_user_#{user.id} " %></p>

             <% end %>


            <div>
                <h3>New book</h3>
                <%= form_for(books) do |f| %>

                    <h4>Title</h4>
                    <%= f.text_field :title,class: "book_title" %>

                    <h4>Opinion</h4>
                    <%= f.text_area :opinion,class: "book_body" %>
                <div>
                    <%= f.submit 'Create Book' %>
                </div>
                <% end %>
            </div>



</div>